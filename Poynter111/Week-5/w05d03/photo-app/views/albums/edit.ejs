<div class="row">
  <h2>Edit <%= album.name %></h2>
  <form class="col l12" action="/albums/<%= album._id %>" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="input-field col l12">
      <input type="text" name="name" id="name_field" value="<%= album.name %>">
      <label for="name_field">Name</label>
    </div>
    <div class="input-field col l12">
      <input type="number" name="year" id="year_field" value="<%= album.year.getFullYear() %>">
      <label for="year_field">Year</label>
    </div>
    <div class="input-field col l12">
      <button class="green btn">Creat New Album</button>
    </div>
  </form>
</div>
